            <div>
              <label for="message" class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-1">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required
                class="w-full px-4 py-2 border border-gray-300 dark:border-dark-700 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-dark-800 dark:text-white"
                placeholder="Your message..."
