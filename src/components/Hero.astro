            <span class="sr-only">LinkedIn</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
          </a>
        </div>
      </div>
      
      <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
        <div class="relative w-64 h-64 md:w-80 md:h-80">
          <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
          <div class="relative z-10 w-full h-full bg-white dark:bg-dark-900 rounded-full overflow-hidden border-4 border-primary-200 dark:border-primary-900/30">
            <Image  
              src={avatar} 
              alt="Neeraj Mukta" 
              class="absolute inset-0 w-full h-full object-cover rounded-full"
              width="400"
              height="400"
              loading="lazy"
              decoding="async"
              fetchpriority="high"
              priority
            />
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative elements -->
  <div class="absolute top-1/2 left-10 w-64 h-64 bg-primary-500/10 dark:bg-primary-500/5 rounded-full filter blur-3xl -z-10"></div>
  <div class="absolute bottom-10 right-10 w-72 h-72 bg-secondary-500/10 dark:bg-secondary-500/5 rounded-full filter blur-3xl -z-10"></div>
</section>

<script>
  import { gsap } from "gsap";
  import SplitType from "split-type";
  
  // Wait for DOM to be loaded
  document.addEventListener('DOMContentLoaded', () => {
    // Split text for animation
    const heroTitle = new SplitType('#hero-title', { types: "chars" });
    const heroText = new SplitType('#hero-text', { types: 'lines' });
    const heroName = new SplitType('#hero-name', { types: 'chars' });
    console.log('heroNames', heroName)
    // Create animation timeline
    const tl = gsap.timeline({ defaults: { ease: "power3.out" } });
    
    tl.set([heroTitle.chars, heroText.lines, '.badge', '.hero-img', '.btn-primary', '.btn-outline'], { opacity: 0 });
    
    tl.fromTo(
      heroTitle.chars,
      { y: 50, opacity: 0 },
      { y: 0, opacity: 1, stagger: 0.03, duration: 0.6 },
      0.5
    );

    /* tl.fromTo(
      heroName.chars,
      { y: 50, opacity: 0 },
      { y: 0, opacity: 1, stagger: 0.03, duration: 0.6 },
      0.8
    ); */
    
    tl.fromTo(
      heroText.lines,
      { y: 20, opacity: 0 },
      { y: 0, opacity: 1, stagger: 0.1, duration: 0.6 },
      1
    );

    
    tl.fromTo(
      '.badge',
      { y: -20, opacity: 0 },
      { y: 0, opacity: 1, duration: 0.6 },
      0.3
    );
    
    tl.fromTo(
      ['.btn-primary', '.btn-outline'],
      { y: 20, opacity: 0 },
      { y: 0, opacity: 1, stagger: 0.1, duration: 0.6 },
      1.3
    );
  });
</script>