<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  document.addEventListener('DOMContentLoaded', () => {
    gsap.from('#about img', {
      scrollTrigger: {
        trigger: '#about',
        start: 'top 80%'
      },
      duration: 1,
      scale: 0.8,
      opacity: 0,
      ease: 'power3.out'
    });
    
    gsap.from('#about p, #about h3, #about li', {
      scrollTrigger: {
        trigger: '#about',
        start: 'top 70%'
      },
      duration: 0.8,
      y: 30,
      opacity: 0,
      stagger: 0.2,
      ease: 'power3.out'
    });
  });
</script>