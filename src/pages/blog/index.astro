---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="Blog | Neeraj Mukta">
  <section class="pt-32 pb-16">
    <div class="container">
      <h1 class="text-4xl md:text-5xl font-display font-bold mb-8">
        Latest <span class="gradient-text">Articles</span>
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          posts.map((post) => (
            <article class="card group">
              <a href={`/blog/${post.slug}`}>
                <div class="relative overflow-hidden pt-[56.25%]">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="absolute inset-0 w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                  />
                </div>
                <div class="p-6">
                  <div class="flex gap-2 mb-3 flex-wrap">
                    {post.data.tags.map((tag) => (
                      <span class="skill-badge">#{tag}</span>
                    ))}
                  </div>
                  <h2 class="text-xl font-bold mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-dark-600 dark:text-dark-400 mb-4">
                    {post.data.excerpt}
                  </p>
                  <div class="flex items-center justify-between text-sm text-dark-500 dark:text-dark-400">
                    <time datetime={post.data.publishDate.toISOString()}>
                      {new Date(post.data.publishDate).toLocaleDateString(
                        "en-US",
                        {
                          year: "numeric",
                          month: "long",
                          day: "numeric",
                        },
                      )}
                    </time>
                    <a
                      href={`/api/download/${post.slug}`}
                      download
                      title="Download this blog post"
                      class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
                      onclick="event.stopPropagation();"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        class="w-5 h-5"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"
                        ></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
