---
import ToolsLayout from "../../layouts/ToolsLayout.astro";

const tools = [
  {
    name: 'Carousel Generator',
    route: '/tools/carousel-gen/',
    image: '/assets/foodfinder.png', // Replace with actual screenshot
    description: 'Generate beautiful carousels from your content. Explain long text in a few slides. Apply your branding to the carousels.',
    cta: 'Try Carousel Generator'
  },
  // Add more tools here as you build them
];
---
<ToolsLayout>
<div class="min-h-screen bg-gray-50 dark:bg-dark-900 py-12">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold text-center mb-10 gradient-text">Available Tools</h1>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {tools.map(tool => (
        <div class="bg-white dark:bg-dark-800 rounded-xl shadow-lg overflow-hidden flex flex-col hover:scale-105 transition-transform duration-200">
          <img src={tool.image} alt={tool.name + ' screenshot'} class="w-full h-48 object-cover" loading="lazy" />
          <div class="p-6 flex-1 flex flex-col">
            <h2 class="text-2xl font-semibold mb-2">{tool.name}</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-4 flex-1">{tool.description}</p>
            <a href={tool.route} class="inline-block w-max mt-auto px-5 py-2 rounded-lg bg-primary-600 text-white font-semibold shadow hover:bg-primary-700 transition-colors">{tool.cta}</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
</ToolsLayout>

<style>
.gradient-text {
  background: linear-gradient(90deg, #7c3aed, #06b6d4);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
}
</style>
