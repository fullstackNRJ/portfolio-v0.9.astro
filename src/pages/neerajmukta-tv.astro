---
import Layout from "../layouts/Layout.astro";

export const prerender = true;
---

<Layout title="neerajmukta.tv">
  <div
    class="min-h-[60vh] flex flex-col items-center justify-center text-center animate-pop-in"
  >
    <h1
      class="text-5xl font-extrabold mb-4 bg-gradient-to-r from-pink-500 via-yellow-400 to-green-400 bg-clip-text text-transparent animate-gradient-x"
    >
      neerajmukta.tv
    </h1>
    <p class="text-lg mb-8 text-gray-700 dark:text-gray-200">
      Games, Puzzles, Tools, Recommendations, Referrals â€” all in one playful,
      animated space!
    </p>
    <div class="w-full max-w-2xl space-y-6 animate-bounce-in">
      <div
        class="bg-white/90 dark:bg-dark-800/90 rounded-xl p-6 shadow-2xl hover:scale-110 transition-transform duration-300"
      >
        <h2 class="text-2xl font-bold mb-2">Featured Game</h2>
        <p class="mb-2">
          Try out a fun interactive puzzle or game, with playful animations and
          sound effects!
        </p>
        <a
          href="#"
          class="text-primary-600 dark:text-primary-400 underline hover:scale-125 transition-transform"
          >Play Now</a
        >
      </div>
      <!-- More animated fun cards -->
    </div>
  </div>
</Layout>
<style>
  @keyframes pop-in {
    0% {
      opacity: 0;
      transform: scale(0.8);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }
  .animate-pop-in {
    animation: pop-in 1.1s cubic-bezier(0.4, 0, 0.2, 1) both;
  }
  @keyframes gradient-x {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 3s ease-in-out infinite;
  }
  @keyframes bounce-in {
    0% {
      opacity: 0;
      transform: translateY(60px) scale(0.9);
    }
    80% {
      transform: translateY(-10px) scale(1.05);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  .animate-bounce-in {
    animation: bounce-in 1.3s cubic-bezier(0.4, 0, 0.2, 1) both;
  }
</style>
